<% @posts.each do |post| %>
  <p><%= post.message %></p>
  
  <li> <%= link_to "Delete", post_path(post.id),  
      method: :delete,
      data: {confirm: "are you sure? "} %> </li>
  <li> <%= link_to "Update", post_path(post.id), 
      method: :patch %> 
  
<% end %>
